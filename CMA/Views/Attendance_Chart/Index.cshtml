@model IEnumerable<CMA.Models.Attendance_Chart>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Attendance Percentage</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li class="breadcrumb-item active">Attendance Record</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->


<table class="table table-bordered">
    <thead>
        <tr>
            <th>
               First Name
            </th>
            <th>
               Last Name
            </th>
            <th>
               Math
            </th>
            <th>
               Physics
            </th>
            <th>
               Chemitry
            </th>
            <th>
               Biology
            </th>
            <th>
               History
            </th>
            <th>
               Literature
            </th>
            <th>
               Remarks
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Math_Attendance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Physics_Attendance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chemitry_Attendance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Biology_Attendance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.History_Attendance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Literature_Attendance)
            </td>
            <td>
                @Html.DisplayFor(modeItem=> item.Remarks)
            </td>
        </tr>
}
    </tbody>
</table>
