@model CMA.Models.Grade_Book

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index2","Grade_Book")">GradeBook</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<h4>Grade_Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control"/>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control"/>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
             </div>          
        </div>
        <div class="row">
           <div class="col-6">      
                <div class="form-group">
                    <label asp-for="Mathematics" class="control-label"></label>
                    <input asp-for="Mathematics" class="form-control"  min="0" max="100"/>
                    <span asp-validation-for="Mathematics" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="Physics" class="control-label"></label>
                    <input asp-for="Physics" class="form-control"  min="0" max="100"/>
                    <span asp-validation-for="Physics" class="text-danger"></span>
                </div>
           </div>
        </div>
        <div class="row">
           <div class="col-6">
                    <div class="form-group">
                    <label asp-for="Chemistry" class="control-label"></label>
                    <input asp-for="Chemistry" class="form-control"  min="0" max="100"/>
                    <span asp-validation-for="Chemistry" class="text-danger"></span>
                </div>
            </div>
           <div class="col-6"> 
                <div class="form-group">
                    <label asp-for="Biology" class="control-label"></label>
                    <input asp-for="Biology" class="form-control"  min="0" max="100"/>
                    <span asp-validation-for="Biology" class="text-danger"></span>
                </div>
           </div>
        </div>
        <div class="row">
           <div class="col-6">     
                <div class="form-group">
                    <label asp-for="History" class="control-label"></label>
                    <input asp-for="History" class="form-control"  min="0" max="100"/>
                    <span asp-validation-for="History" class="text-danger"></span>
                </div>
            </div>
        <div class="col-6">
                <div class="form-group">
                    <label asp-for="Literature" class="control-label"></label>
                    <input asp-for="Literature" class="form-control"  min="0" max="100"/>
                    <span asp-validation-for="Literature" class="text-danger"></span>
                </div>
            </div>
         </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index2" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
