@model IEnumerable<CMA.Models.Grade_Book>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>GradeBook</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li class="breadcrumb-item active">GradeBook</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="card">
    <div class="card-header">
        <h3 class="card-title">GradeBook</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mathematics)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Physics)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chemistry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Biology)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.History)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Literature)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Avg_grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Letter_grade)
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mathematics)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Physics)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chemistry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Biology)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.History)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Literature)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Avg_grade)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Letter_grade)
            </td>
        </tr>
}
    </tbody>
</table>
    </div>

</div>